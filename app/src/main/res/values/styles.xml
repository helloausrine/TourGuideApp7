<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00897B</item>
        <item name="colorPrimaryDark">#004D40</item>
        <item name="colorAccent">#B2DFDB</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">@color/colorPrimary</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/textSizeTab</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>

    </style>
    <!-- Style for the text container -->
    <style name="TextContainer">
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <!-- Style for the title of the list item -->
    <style name="TitleListItem">
        <item name="android:gravity">top</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/textSizeList</item>
    </style>

    <!-- Style for the description of the list item -->
    <style name="DescriptionListItem">
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/textSizeList</item>
    </style>

</resources>